{
	"manifest_version": 2,

	"name":"Alexa Search",
	"version":"1.0",

	"description" : "Search with Amazon Alexa",
	"background": {
	    "persistent": true,
	    "scripts": ["socket.io.js",
	    			"background.js"]
	  },
	"browser_action":{
		"default_title" : "Hi, Alexa!",
		"default_icon": "icon.png",
		"default_popup":"popup.html"
	},
	"permissions":[
		"tabs",
		"history"
	]
}